<form method="post" action="{{ path('display_prod_delete', {'id': display_prod.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ display_prod.id) }}">
    <button class="btn">Delete</button>
</form>
